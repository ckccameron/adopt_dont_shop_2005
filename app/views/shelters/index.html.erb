<h1>All Shelters</h1>
<h3><%= link_to "View All Pets", "/pets" %></h3>
<br>
<%= link_to "New Shelter", "/shelters/new" %>
<br>
<br>
<% @shelters.each do |shelter| %>
  <h4><%= link_to "#{shelter.name}", "/shelters/#{shelter.id}" %></h4>
  <p><%= link_to "Edit Shelter", "/shelters/#{shelter.id}/edit" %></p>
  <p><%= link_to "Delete Shelter", "/shelters/#{shelter.id}", method: :delete %></p>
<% end %>
